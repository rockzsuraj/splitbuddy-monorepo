{
  "name": "splitbuddy-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.26.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter @splitbuddy/api dev",
    "dev:api:netlify": "pnpm --filter @splitbuddy/api netlify-dev",
    "build:api": "pnpm --filter @splitbuddy/api build",
    "dev:mobile": "pnpm --filter @splitbuddy/mobile start",
    "dev:mobile:android": "pnpm --filter @splitbuddy/mobile android",
    "dev:mobile:ios": "pnpm --filter @splitbuddy/mobile ios --simulator=\"iPhone 17 Pro\"",
    "dev:mobile:android:all": "pnpm dev:mobile & pnpm dev:mobile:android",
    "dev:mobile:ios:all": "pnpm dev:mobile & pnpm dev:mobile:ios",
    "dev": "pnpm dev:api & pnpm dev:mobile"
  },
  "devDependencies": {
    "turbo": "2.6.3"
  }
}